<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<!-- <div class="col-md-3">
			<p class="lead">
				Lake Review
			</p>
			<div class="list-group">
				<li class="list-group-item">info1</li>
				<li class="list-group-item">2</li>
				<li class="list-group-item">3</li>
			</div>
		</div>-->
		<div class="col-md-9 pt-3 mx-auto">
			<div class="card card-body greenBG">
				<img class =" w-100" src="<%=lake.image%>">
				<div class="caption-full pt-3">
					<h4 class="float-right">
						$20 parking
					</h4>
					<h4 id="lakeName">
						<strong><%=lake.name%></strong>
					</h4>
					<p>
						<%=lake.description%>
					</p>
					<div class="row">
						<div class="col-6">
							<p>
							<em>Submitted By:  <%=lake.author.username%></em>
							</p>
						</div>
						<% if(currentUser && lake.author.id.equals(currentUser._id)){ %>
						<div class="col-6 d-flex  justify-content-end">
							<div class="pr-1">
								<a class=" btn btn-sm btn-warning float-right " href="/lakes/<%=lake._id%>/edit">Edit Post</a>
							</div>
							<div>
								<form action="/lakes/<%=lake._id%>?_method=DELETE" method="POST">
									<button class=" btn btn-sm btn-danger float-right ">
										Delete
									</button> 
								</form>
							</div>
						</div>
						<%}%>
					</div>
					
				</div>
			</div>
			<div class="card card-body greenBG my-2 ">
				<div class="row">
					<div class="col-9">
						<h4>
							Comments
						</h4>
					</div>
					<div class="col-3 pb-2">
						<a class=" btn btn-sm button_style float-right" href="/lakes/<%=lake._id%>/comments/new">Add a comment</a>
					</div>
					
				</div>
					
				<div>
					<% lake.comments.forEach((comment)=>{ %>
					<div class="card card-body pastyG-BG clearfix">
						<div class="row">
							<div class="col-6 pl-3">
								<strong><%= comment.author.username%> :</strong>
							</div>
							<div class="col-6">
								<span class="float-right">10 days ago</span>
							</div>
							
						</div>
						<hr id="commentHr" class="my-1 mx-0 ">
						<div class="row">
							<div class="col-8 pl-3">
								<%=comment.text%>
							</div>
							<% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
							<div class="col-4 row justify-content-end pr-0">
								<div class="pr-1">
									<a class="btn btn-warning btn-sm" 
									href="/lakes/<%=lake._id%>/comments/<%=comment._id%>/edit">Edit</a>
								</div>
								<div>
									<form action="/lakes/<%=lake._id%>/comments/<%=comment._id%>/?_method=DELETE" method="POST">
										<button class=" btn btn-sm btn-danger">
											Delete
										</button> 
									</form>
								</div>
							</div>	
							<% } %> 
						</div>
					</div>
					<% }); %>
				</div>
			</div>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>